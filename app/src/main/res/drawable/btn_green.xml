            <gradient android:angle="90" android:endColor="#C5E1A5" android:startColor="#9CCC65" />

            <stroke android:width="1dp" android:color="#DCEDC8" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
